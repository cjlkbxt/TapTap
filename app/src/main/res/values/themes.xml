<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.TapTap" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">@bool/lightStatus</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/lightNav</item>
        <item name="textAppearanceLargePopupMenu">@style/AppTheme.TextAppearance.Popup</item>
        <item name="actionOverflowMenuStyle">@style/TapTapOverflowMenu</item>
        <item name="android:overScrollMode">@integer/overscroll_enabled</item>
    </style>

    <style name="Theme.TapTap.Splash" parent="Theme.TapTap"/>

    <style name="TransparentActivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ReachabilityTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/reachability_background</item>
        <item name="android:windowLightStatusBar">@bool/lightStatus</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/lightNav</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Material3.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/lightNav</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BaseBottomSheetDialog.Dark" parent="@style/Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet.Dark</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/lightNav</item>
        <item name="android:navigationBarColor">@color/cardview_dark_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_bg_light</item>
    </style>

    <style name="BottomSheet.Dark" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_bg_dark</item>
    </style>

    <style name="AppTheme.ThirdPartyLicences" parent="Theme.MaterialComponents.DayNight">
        <item name="actionBarStyle">@style/ThirdPartyLicencesToolbarTheme</item>
        <item name="android:windowBackground">@color/licenses_background</item>
        <item name="android:statusBarColor">@color/licenses_background</item>
        <item name="android:navigationBarColor">@color/licenses_background</item>
        <item name="android:windowLightStatusBar">@bool/lightStatus</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/lightNav</item>
        <item name="android:textViewStyle">@style/ThirdPartyLicencesTextViewStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ThirdPartyLicencesActivityAnimation</item>
    </style>

    <style name="ThirdPartyLicencesActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ThirdPartyLicencesToolbarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/licenses_toolbar</item>
        <item name="titleTextStyle">@style/ThirdPartyLicencesToolbarTitleStyle</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="ThirdPartyLicencesToolbarTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/google_sans_text_medium</item>
    </style>

    <style name="ThirdPartyLicencesTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/google_sans_text</item>
    </style>

    <style name="TapTapOverflowMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/background_menu</item>
    </style>

    <style name="AppTheme.TextAppearance.Popup" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="fontFamily">@font/google_sans_text</item>
    </style>

</resources>